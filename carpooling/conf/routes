# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET      /                                  controllers.HomeController.index
GET      /indexWithMessage                  controllers.HomeController.indexWithMessage(msg: String)
GET      /login				    controllers.HomeController.login
GET      /logout                            controllers.HomeController.logout
POST     /validatelogin                     controllers.HomeController.validateLoginAndPassword
POST     /addUser                           controllers.HomeController.addUser
GET      /addUserToKindergarten/:kgHashCode controllers.HomeController.addUserToKindergarten(kgHashCode)
GET      /user                        	    controllers.HomeController.userMenu
GET      /kindergarten                	    controllers.HomeController.kindergartenMenu
POST     /addKindergarten            	    controllers.HomeController.addKindergarten
GET      /findKindergarten           	    controllers.HomeController.findKindergarten
POST     /findparents                	    controllers.HomeController.showUsersFromKindergarten
GET      /findmyparents              	    controllers.HomeController.showUsersFromMyKindergarten(msg: String ?= "Users from my kindergarten")
GET      /allkindergartens           	    controllers.HomeController.allKindergartens
GET      /panel                      	    controllers.HomeController.showUserPanel(msg: String ?= "Nothing happens")
GET      /deleteuser		     	    controllers.HomeController.deleteUser
GET      /sendrequest/:email         	    controllers.HomeController.sendRequest(email)
GET      /replyforrequest/:email     	    controllers.HomeController.replyForRequest(email)
GET      /rejectrequest/:email       	    controllers.HomeController.rejectRequest(email)
GET      /leavegroup                 	    controllers.HomeController.leaveGroup()
POST     /addUserMessage             	    controllers.HomeController.addUserMessage()
GET      /timeline                   	    controllers.HomeController.showTimeline()
GET      /filterMessages             	    controllers.HomeController.filterMessages

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
